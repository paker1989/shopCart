{
    "compileOnSave": true,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "jsx": "react",
      "lib": ["dom", "es2018", "esnext.intl", "es2017.intl", "es2018.intl"],
      "module": "es6",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false, //temporaire
      "outDir": "es",
      "pretty": true,
      "removeComments": true,
      "skipLibCheck": true,
      "target": "es5",
      "noImplicitAny": false
    },
    "exclude": ["lib", "es", "node_modules", "__tests__"],
    "include": ["src", "doc/calendar/archive/dayLayout", "doc/calendar/archive/dayLayout"]
  }
  